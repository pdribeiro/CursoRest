import static io.restassured.RestAssured.*;

import org.junit.Test;


public class VerbosTest {

	@Test	
	
	public void deveSalvarUsuario() {
		
		given()
		.log().all()
		.contentType("application/json")
		.body("{\"name\":\"Jose\", \"age\": 50}")
		
		.when()
			.post("https://restapi.wcaquino.me/users")
		.then()
		.log().all()
		.statusCode(201)
		;
		
		
	}

}

